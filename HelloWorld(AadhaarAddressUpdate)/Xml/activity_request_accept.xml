<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.RequestAcceptActivity">

    <EditText
        android:id="@+id/otp_response"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:gravity="center"
        android:hint="Enter OTP"
        android:inputType="textPersonName"
        tools:ignore="TouchTargetSizeCheck"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        android:visibility="gone"
        />
    <Button
        android:id="@+id/submit_otp"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:text="submit"
        tools:ignore="MissingConstraints"
        android:layout_below="@id/otp_response"
        android:layout_margin="20dp"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="357dp"
        android:id="@+id/layout_id"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="122dp"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/text_view_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Input Aadhaar Number"
            android:layout_margin="10dp"/>

        <EditText
            android:id="@+id/aadharnumber"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:ems="10"
            android:hint="9999XXXXXXX"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:layout_margin="10dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create a 4 digit Secret Code"
            android:layout_margin="10dp" />

        <EditText
            android:id="@+id/secretcode"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:ems="10"
            android:hint="XXXX"
            android:inputType="numberPassword"
            android:layout_margin="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <ImageView
                android:id="@+id/imageview"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="10dp" />
        </LinearLayout>

        <EditText
            android:id="@+id/captchacode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Enter captcha"
            android:inputType="textPersonName"
            tools:ignore="TouchTargetSizeCheck"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/button_parse"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:text="Submit"
            tools:ignore="MissingConstraints"
            android:layout_margin="10dp"/>

    </LinearLayout>

</RelativeLayout>